	<!-- Stacking -->
	<div class="card border-primary mb-3">
		<h4 class="card-header">Stacking</h4>
		<div class="card-body">
			<div class="row">
				<div class="col-2 text-left">
					<h5>Name</h5>
				</div>
				<div class="col-2 text-left">
					<h5>Icon</h5>
				</div>
				<div class="col-8 text-left">
					<h5>Code</h5>
				</div>
			</div>

			<div class="row">
				<div class="col-2 text-left">
					<p>Example 1</p>
				</div>
				<div class="col-2 text-left">
					<p>
						@using (Html.BeginFaStack(FaSizes.Lg2x))
						{
							@FaIcons.Sun.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x)
							@FaIcons.Thermometer.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x).WithOption(FaOptions.Inverse)
						}
					</p>
				</div>
				<div class="col-8 text-left">
					<pre class="pre-window">
@@using (Html.BeginFaStack(FaSizes.Lg2x))
{
	@@FaIcons.Sun.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x)
	@@FaIcons.Thermometer.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x).WithAttribute(FaAttributes.Inverse)
}
					</pre>
				</div>
			</div>

			<div class="row">
				<div class="col-2 text-left">
					<p>Example 2</p>
				</div>
				<div class="col-2 text-left">
					@using (Html.BeginFaStack(FaSizes.Lg3x))
					{
						@FaIcons.Grin.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x)
						@FaIcons.ExpandAlt.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x).WithOption(FaOptions.Inverse).WithTransform(FaTransforms.Spin)
					}
				</div>
				<div class="col-8 text-left">
					<pre class="pre-window">
@@using (Html.BeginFaStack())
{
	@@FaIcons.Grin.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x)
	@@FaIcons.ExpandAlt.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x).WithAttribute(FaAttributes.Inverse).WithTransform(FaTransforms.Spin)
}
					</pre>
				</div>
			</div>

			<div class="row">
				<div class="col-2 text-left">
					<p>Example 3</p>
				</div>
				<div class="col-2 text-left">
					@using (Html.BeginFaStack(FaSizes.Lg2x))
					{
						@FaIcons.Camera.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x)
						@FaIcons.Ban.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x).WithCssStyle("color", "tomato")
					}
				</div>
				<div class="col-8 text-left">
					<pre class="pre-window">
@@using (Html.BeginFaStack(FaSizes.Lg2x))
{
	@@FaIcons.Ban.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack2x).WithClass("color", "tomato")
	@@FaIcons.Camera.Create().WithStyle(FaStyles.Solid).WithStackAttribute(FaStackAttributes.Stack1x)
}
					</pre>
				</div>
			</div>

			<div class="row">
				<div class="col-2 text-left">
					<p>Example 4</p>
				</div>
				<div class="col-2 text-left">
					@using (Html.BeginFaStack(FaSizes.Lg2x))
